<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".Controlador.Activities.StoryActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Life Diary"
        android:textSize="30dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:background="@drawable/back_image"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="Ubicacion Actual:" />

    <TextView
        android:id="@+id/textAddress"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape"
        android:backgroundTint="#ffd6bb"
        android:layout_gravity="center"
        android:text="" />

    <EditText
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:background="@drawable/shape"
        android:hint="Escribe tu Historia"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:padding="15dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_cam"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:drawable/ic_menu_camera"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/buttonStory"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="#ef9a9a"
        android:text="Guardar Historia" />
</LinearLayout>