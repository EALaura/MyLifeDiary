<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helpView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controlador.Activities.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Ayuda Bluetooth"
                android:textSize="25dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para el uso de esta funcionalidad, ambos dispositivos X, Y deben estar conectados, siga las siguientes instrucciones:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n1. Habilitar los permisos de uso de bluetooth de los dispositivos X, Y." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n2. Presionar escuchar en el dispositivo X." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help2"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n3. Listar Dispositivos en el dispositivo Y." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help3"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n4. Seleccionar el dispositivo con el que desea conectarse (Y)." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help4"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n5. Esperar que el status de bluetooth indique Conectado (X, Y)." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help5"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n6. Ahora usted puede compartir sus historias, recibir historias y chatear por Bluetooth." />
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:src="@drawable/help6"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>